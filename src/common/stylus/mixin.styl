bg-img($url)
  background-image: url($url + "@2x.png")
  @media (-wekit-min-device-pixel-ratio: 3), (min-device-pixel-ratio: 3)
    background-image: url($url + "@3x.png")
    
border-1px($color)
  position: relative
  &:after
    content: ''
    display: block
    position: absolute
    width: 100%
    bottom: 0
    left: 0
    border-top: 1px solid $color
    
    